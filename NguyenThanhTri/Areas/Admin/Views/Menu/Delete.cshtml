﻿@model MyClass.Model.Menus

@{
    ViewBag.Title = "Xác nhận xóa dữ liệu";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="wrapper">
        <!-- Main Sidebar Container -->
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Main content -->
            <section class="content">

                <!-- Default box -->
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <strong class="text-danger">XÁC NHẬN XÓA DỮ LIỆU</strong>
                            </div>

                            <div class="col-md-6 text-right">
                                <a href=" @Url.Action("Index", "Menu")" class="btn-sm btn-info"><i class="fa fa-long-arrow-alt-left">Quay lại</i></a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        @Html.Partial("Message")
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                                    <th>@Html.DisplayNameFor(model => model.Position)</th>
                                    <th>@Html.DisplayNameFor(model => model.TableId)</th>
                                    <th>@Html.DisplayNameFor(model => model.Order)</th>
                                    <th>@Html.DisplayNameFor(model => model.TypeMenu)</th>
                                    <th>@Html.DisplayNameFor(model => model.Link)</th>
                                    <th>@Html.DisplayNameFor(model => model.ParentID)</th>
                                    <th>Xác nhận</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Html.DisplayFor(model => model.Id)</td>
                                    <td>@Html.DisplayFor(model => model.Name)</td>
                                    <td>@Html.DisplayFor(model => model.Position)</td>
                                    <td>@Html.DisplayFor(model => model.TableId)</td>
                                    <td>@Html.DisplayFor(model => model.Order)</td>
                                    <td>@Html.DisplayFor(model => model.TypeMenu)</td>
                                    <td>@Html.DisplayFor(model => model.Link)</td>
                                    <td>@Html.DisplayFor(model => model.ParentID)</td>
                                    <td>
                                        <div class="form-actions no-color">
                                            <button class="btn-sm btn-danger" input type="submit" name="Delete"> Xóa [Del] <i class="fa fa-trash"></i></button>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div> <!-- /.card-footer-->
                </div><!-- /.card -->
            </section><!-- /.content -->
        </div> <!-- /.content-wrapper -->
    </div><!-- ./wrapper -->
}